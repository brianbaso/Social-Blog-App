<% include ./partials/header %>

<div class="ui main text container segment">
	<% blogs.forEach(function(blog) { %>
		<div>
			<h2><%= blog.title %></h2>
			<span><%= blog.created %></span>
			<p><%= blog.body.substring(0, 200) %></p>
			<a href="/blogs/<%= blog._id %>">Read More</a>
		</div>
	<% }) %>
</div>

<% include ./partials/footer %>